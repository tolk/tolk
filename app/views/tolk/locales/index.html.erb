<header>
  <h1>Translations</h1>
  <p>Primary locale is <%= Tolk::Locale.primary_locale.language_name %></p>
</header>

<% if @locales.any? %>
  <ul class="locales clearfix">
    <% @locales.each do |locale| %>
      <li>
        <%= link_to locale.language_name, locale %>
        <% missing_count = locale.count_phrases_without_translation %>
        <% if missing_count > 0 %>
          <span class="missing_translations"><%= missing_count %> missing</span>
        <% end %>
      </li>
    <% end %>
  </ul>

<% else %>
  <p>No locales yet.</p>

<% end %>
